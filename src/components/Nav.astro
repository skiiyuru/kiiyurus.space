---
import NavLink from '@/components/ui/NavLink.astro'
import { socialData } from '@/data/siteData'

const links = [
  {
    title: 'Home',
    href: '/',
    icon: 'memory-cube',
    class: 'hover:animate-spin',
  },
  {
    title: 'Projects',
    href: '/projects',
  },
  {
    title: 'Lab',
    href: '/lab',
  },
  {
    title: 'Stories',
    href: '/blog',
  },
]
---

<nav class="flex justify-center py-3">
  <ul class="flex items-center gap-4">
    {
      links.map((item) => (
        <NavLink
          icon={item.icon}
          href={item.href}
          title={item.title}
          classes={item?.class}
        />
      ))
    }
    {
      socialData.map((item) => (
        <NavLink
          href={item.href}
          title={item.title}
          icon={item.icon}
          classes="size-6 lg:size-8"
          target="_blank"
        />
      ))
    }
  </ul>
</nav>
