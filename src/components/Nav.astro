---
import NavLink from '@/components/ui/NavLink.astro'
import { socialData } from '@/data/siteData'

const links = [
  {
    title: 'Home',
    href: '/',
    icon: 'memory-cube',
    class: 'size-5 md:size-6 lg:size-8',
  },
  {
    title: 'About',
    href: '/about',
  },
  {
    title: 'Projects',
    href: '/projects',
  },
  // {
  //   title: 'Lab',
  //   href: '/lab',
  // },
  {
    title: 'Blog',
    href: '/blog',
  },
]
---

<nav class="p-4">
  <ul class="flex justify-between items-center">
    <div class="flex gap-x-4 lg:gap-x-6">
      {
        links.map(item => (
          <NavLink
            icon={item.icon}
            href={item.href}
            title={item.title}
            classes={item?.class}
          />
        ))
      }
    </div>
    <div class="flex gap-x-3 lg:gap-x-4 items-center">
      {
        socialData.map(item => (
          <NavLink
            href={item.href}
            title={item.title}
            icon={item.icon}
            classes="size-4 md:size-5 lg:size-6"
            target="_blank"
          />
        ))
      }
    </div>
  </ul>
</nav>
