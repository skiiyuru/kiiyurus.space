---
import NavLink from "@/components/ui/NavLink.astro"

const navData = [
  {
    title: "Showcase",
    href: "/projects",
    class: "",
  },
  {
    title: "Home",
    href: "/",
    icon: "memory-cube",
    class: "hover:animate-spin",
  },
  {
    title: "Stories",
    href: "/blog",
    class: "",
  },
]
---

<nav class="flex justify-center py-3">
  <ul class="flex items-center gap-4">
    {
      navData.map((item) => (
        <NavLink
          icon={item.icon}
          href={item.href}
          title={item.title}
          classes={item.class}
        />
      ))
    }
  </ul>
</nav>
