---
import NavLink from '@/components/ui/NavLink.astro'
import { socialData } from '@/data/siteData'

const links = [
  {
    title: 'Home',
    href: '/',
    icon: 'memory-cube',
    class: 'hover:animate-spin',
  },
  {
    title: 'About',
    href: '/about',
  },
  {
    title: 'Projects',
    href: '/projects',
  },
  {
    title: 'Lab',
    href: '/lab',
  },
  {
    title: 'Blog',
    href: '/blog',
  },
]
---

<nav class="p-4">
  <ul class="flex justify-between">
    <div class="flex gap-x-6">
      {
        links.map(item => (
          <NavLink
            icon={item.icon}
            href={item.href}
            title={item.title}
            classes={item?.class}
          />
        ))
      }
    </div>
    <div class="flex gap-x-4">
      {
        socialData.map(item => (
          <NavLink
            href={item.href}
            title={item.title}
            icon={item.icon}
            classes="size-6 lg:size-7"
            target="_blank"
          />
        ))
      }
    </div>
  </ul>
</nav>
