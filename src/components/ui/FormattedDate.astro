---
type Props = {
  pubDate: Date
  className?: string
}

const { pubDate, className } = Astro.props
---

<time datetime={pubDate.toISOString()} class=`text-zinc-500  ${className}`>
  {
    pubDate.toLocaleDateString('en-US', {
      month: 'long',
      day: '2-digit',
      year: 'numeric',
    })
  }
</time>
