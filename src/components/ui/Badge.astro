---
import { Icon } from "astro-icon/components"
import type { HTMLAttributes } from "astro/types"

type Props = HTMLAttributes<"button"> & {
  pressed?: boolean
}

const { pressed, ...otherProps } = Astro.props
---

<button
  aria-label="Remove"
  class:list={[
    "relative inline-block border-2 border-zinc-950 px-2 py-1 text-sm font-medium hover:border-zinc-500 hover:text-zinc-500",
    pressed && "bg-zinc-950 text-white",
  ]}
  {...otherProps}
>
  <slot />
  {
    pressed && (
      <Icon
        name="close"
        aria-hidden="true"
        class="size-5 bg-white text-zinc-950 border border-zinc-950 absolute top-0 right-0 inline-flex items-center justify-center p-1 text-sm transform translate-x-1/2 -translate-y-1/2"
      />
    )
  }
</button>
