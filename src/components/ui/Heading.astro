---
const styles = {
  h1: "text-5xl lg:text-6xl font-display",
  h2: "text-4xl lg:text-5xl font-display",
  h3: "text-2xl lg:text-4xl font-bold ",
  h4: "text-2xl lg:text-3xl font-bold",
}

type Props = {
  tagName: keyof typeof styles
  classes?: string
  id?: string
}

const { tagName, classes, id } = Astro.props

const Tag = tagName
---

<Tag
  id={id}
  class:list={["text-pretty tracking-wider", styles[tagName], classes]}
>
  <slot />
</Tag>
