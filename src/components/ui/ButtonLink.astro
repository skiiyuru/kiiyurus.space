---
// types
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'a'> & {
  href: string
  variant?: 'primary' | 'secondary' | 'badge'
}

const { href, variant = 'primary', ...otherProps } = Astro.props

export const styles = {
  secondary: `
    border-2 border-zinc-500 text-zinc-500 
    hover:bg-cream hover:text-charcoal hover:border-cream
    `,
  primary: `
    border-2 border-zinc-500 bg-zinc-500 text-cream
    hover:bg-cream hover:border-cream hover:text-charcoal
    `,
  badge: `
    border-2 border-zinc-500 font-bold
    hover:border-cream hover:text-cream
    `,
}
---

<a
  href={href}
  class:list={['py-1 px-4 w-fit font-semibold tracking-wider transition-all ease-in-out duration-300', styles[variant]]}
  {...otherProps}
>
  <slot />
</a>
