---
// types
import type { HTMLAttributes } from 'astro/types'

type Props = HTMLAttributes<'a'> & {
  href: string
  variant?: 'primary' | 'secondary' | 'badge'
}

const { href, variant = 'primary', ...otherProps } = Astro.props

export const styles = {
  secondary: `
  border-2 border-zinc-500 text-white hover:bg-zinc-500 hover:border-zinc-900`,
  primary: `border-4 border-zinc-900 hover:border-zinc-500
  text-zinc-950 bg-white transition-all ease-in-out duration-300`,
  badge:
    ' border-2 border-zinc-900  font-bold hover:border-zinc-500 hover:text-zinc-500',
}
---

<a
  href={href}
  class:list={['py-1 px-4 w-fit font-semibold tracking-wider', styles[variant]]}
  {...otherProps}
>
  <slot />
</a>
